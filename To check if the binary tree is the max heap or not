/*
class Node {
    int data;
    Node left,right;
    Node(int d){
        data=d;
        left=right=null;
    }
}
*/

class Solution {
    public boolean isHeap(Node tree) {
        // code here
        Queue<Node>q=new LinkedList<>();
        q.add(tree);
        boolean nullseen=false;
        while(!q.isEmpty())
        {
            
            Node temp=q.poll();
            if(temp==null)
            {
                nullseen=true;
            }
            else
            {
                if(nullseen==true)
                {
                    return false;
                }
                if(temp.left!=null && temp.left.data>temp.data)
                {
                    return false;
                }
                if(temp.right!=null && temp.right.data>temp.data)
                {
                    return false;
                }
                q.add(temp.left);
                q.add(temp.right);
            }
        }
        return true;
    }
    
} 
